<ListViewItem
    x:Class="SC2_CombineData.SC2_FileListViewItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SC2_CombineData"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:whcom="clr-namespace:WH_CommonControlLibrary.UIControl.Control;assembly=WH_CommonControlLibrary"
    Name="ListViewItem_Item"
    mc:Ignorable="d" BorderBrush="LightGray" BorderThickness="1">
    <Grid Name="Grid_Item" Width="{Binding ElementName=ListViewItem_Item,Path=ItemWidth}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Column="0"
            VerticalAlignment="Center"
            Text="Mod路径:" />
        <whcom:WH_SelectPathControl
            Name="SelectPathControl_FilePath"
            Grid.Column="1"
            ButtonContent="选择" />
    </Grid>
</ListViewItem>
